<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp150">

        <ImageView
            android:id="@+id/img_anhnen_chitietphim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_fail_img" />

        <ImageView
            android:id="@+id/img_hinhanh_chitietphim"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp130"
            android:layout_margin="@dimen/dp5"
            android:src="@drawable/default_fail_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_xemphim_chitietphim"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp35"
                android:layout_marginRight="@dimen/dp5"
                android:background="@drawable/rounded_rectangle"
                android:gravity="center"
                android:text="Xem Phim"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/tv_thich_chitietphim"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp35"
                android:background="@drawable/rounded_rectangle"
                android:gravity="center"
                android:text="Thích"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_bothich_chitietphim"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp35"
                android:background="@drawable/rounded_rectangle"
                android:gravity="center"
                android:text="Bỏ Thích"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15"
                android:visibility="gone" />
        </LinearLayout>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressbar_chitietphim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp5"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:paddingTop="@dimen/dp10"
                android:text="Thông tin"
                android:textColor="@color/green"
                android:textSize="@dimen/sp16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Năm phát hành: "
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_namphathanh_chitietphim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 2018"
                    android:textSize="@dimen/sp14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thể loại: "
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_theloai_chitietphim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Tiên Hiệp, Cn Animation"
                    android:textSize="@dimen/sp14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời lượng: "
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_thoiluong_chitietphim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ?? Tập"
                    android:textSize="@dimen/sp14" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp5"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:paddingTop="@dimen/dp10"
                android:text="Nội dung"
                android:textColor="@color/green"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_noidung_chitietphim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:text="noi dung chi tiet phim"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>